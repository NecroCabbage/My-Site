@page
@model OmerBagrutSite.Pages.UpdatePageModel
@{
    ViewData["Title"] = "Update Account Info";
}
<link rel="stylesheet" href="~/css/RegisterStyle.css" ask-append-version="true" />
<script src="~/js/Register.js"></script>

<div class ="register-form">

    <h2>Update My Info</h2>

    <form method="post" onsubmit="validateRegistgerForm()">
        
        <input type="hidden" asp-for="user.UserId" />
        
        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="text-danger">@Model.errorMessage</div>
        }

        <label asp-for="user.Username">Username:</label> 
        <input asp-for="user.Username" type="text" id="reg_username" placeholder="Username" required />

        @* ---------------------------- *@

        <label asp-for="user.Password">Password:</label>
        <input asp-for="user.Password" type="text" id="reg_password" placeholder="Password" maxlength="15" oninput="checkPassword()" />
        <div class="text-danger" id="reg_errorpassword"></div>

        @* ---------------------------- *@

        <label for="reg_verifypassword">Verify Password</label>
        <input type="password" id="reg_verifypassword" maxlength="15" placeholder="verify password" oninput="checkVerifyPassword()">
        <div class="text-danger" id="reg_errorverifypassword"></div>

        @* ---------------------------- *@

        <label asp-for="user.BirthYear">Year Of Birth:</label> 
        <input asp-for="user.BirthYear" type="number" id="reg_birthyear" placeholder="Birth Year" min="1900" oninput="checkBirthYear()" /> 
        <div class="text-danger" id="reg_errorbirthyear"></div> 

        @* ---------------------------- *@

        <label asp-for="user.City">City:</label>
        <input asp-for="user.City" type="text" id="reg_city" placeholder="City" required />

        @* ---------------------------- *@

