        <label asp-for="user.Email">Email:</label>
        <input asp-for="user.Email" type="email" id="reg_mail" placeholder="xxx@gmail.com" oninput="checkEmail()" /> 
        <div class="text-danger" id="reg_errormail"></div>

        @* ---------------------------- *@

        <label asp-for="user.PhoneNumber">Phone Number:</label>
        <input asp-for="user.PhoneNumber" type="tel" id="reg_phone" placeholder="+X-XXX-XXX-XXXX" oninput="checkPhoneNumber()" />
        <div class="text-danger" id="reg_errorphone"></div>

        @* ---------------------------- *@

        <label asp-for="user.FirstName">First Name:</label>
        <input asp-for="user.FirstName" type="text" id="reg_firstname" oninput="checkFirstName()" />
        <div class="text-danger" id="reg_errorfirstname"></div>

        @* ---------------------------- *@

        <label asp-for="user.LastName">Last Name:</label>
        <input asp-for="user.LastName" type="text" id="reg_lastname" oninput="checkLastName()" />
        <div class="text-danger" id="reg_errorlastname"></div>

        @* ---------------------------- *@

        <label>Gender:</label>
        <div class="radio-grid" id="reg_gender">
            <label><input asp-for="user.Gender" type="radio" name="user.Gender" value="Male" oninput="checkGender()" /> Male </label>
            <label><input asp-for="user.Gender" type="radio" name="user.Gender" value="Female" oninput="checkGender()" /> Female </label>
            <label><input asp-for="user.Gender" type="radio" name="user.Gender" value="Velociraptor" oninput="checkGender()" /> Velociraptor </label>
        </div>
        <div class="text-danger" id="reg_errorgender"></div>
        <br />

        @* ----------------------------*@
        <div class="button-container">
            <button type="reset" class="reset-button">↻</button>
            <button type="submit" class="submit-button">Submit</button>
        </div>
    </form>
    @if (ViewData["Message"] != null)
    {
        <p>@ViewData["Message"]</p>
    }
</div>
