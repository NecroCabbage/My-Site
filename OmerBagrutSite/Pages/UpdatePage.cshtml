            <option value="Corallini">Corallini</option>
            <option value="Creste di gallo">Creste di gallo</option>
            <option value="Ditalini">Ditalini</option>
            <option value="Elicoidali">Elicoidali</option>
            <option value="Fagottini">Fagottini</option>
            <option value="Farfalle">Farfalle</option>
            <option value="Fazzoletti">Fazzoletti</option>
            <option value="Fettuccine">Fettuccine</option>
            <option value="Fideuà">Fideuà</option>
            <option value="Filini">Filini</option>
